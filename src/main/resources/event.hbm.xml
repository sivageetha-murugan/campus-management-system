<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.i2i.cms.models.Event" table = "events">
        <id name = "eventId" column = "id">
            <generator class = "increment"/>
        </id>
        <property name = "eventName" column = "name" type = "string"/>
        <property name = "eventVenue" column = "venue" type = "string"/>
        <property name = "eventDate" column = "date" type = "date"/>
        <property name = "eventIncharge" column = "incharge" type = "string"/>
        <property name = "eventCategory" column = "category" type = "string"/>
        <set name = "students" table = "students_events" inverse = "true" lazy = "false">
            <key column = "event_id"/>
            <many-to-many column = "student_id" class = "com.i2i.cms.models.Student"/>
        </set>
    </class>
</hibernate-mapping>
