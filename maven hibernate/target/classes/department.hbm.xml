<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package = "resources">
    <class name="com.i2i.cms.model.Department" table="departments">
        <id name="departmentId" column="id">
            <generator class="increment"/>
        </id>
        <property name="departmentName" column="name" type="string"/>
        <property name="departmentHOD" column="hod_name" type="string"/>
        <property name="noOfTeachers" column="no_teachers" type="int"/>
        <property name="noOfStudents" column="no_students" type="int"/>
    </class>
</hibernate-mapping>
