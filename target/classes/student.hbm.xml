<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.i2i.cms.models.Student" table = "students">
        <id name = "studentId" type = "int" column = "id">
            <generator class = "increment"/>
        </id>
        <property name = "studentName" column = "name" type = "string"/>
        <property name = "studentDob" column = "dob" type = "date"/>
        <property name = "studentMarks" column = "marks" type = "int"/>
        <many-to-one name = "grade" class = "com.i2i.cms.models.Grade" cascade = "save-update" lazy = "false"
             fetch = "select" column = "grade_id"/>
        <one-to-one name = "personalDetails" class = "com.i2i.cms.models.PersonalDetails" cascade = "all" fetch = "join"/>
        <set name = "events" table = "students_events" cascade = "save-update" lazy = "false">
            <key column = "student_id"/>
            <many-to-many column = "event_id" class = "com.i2i.cms.models.Event"/>
        </set>
    </class>
</hibernate-mapping>
